package com.springboot.one.dao;

import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Result;
import org.apache.ibatis.annotations.Results;
import org.apache.ibatis.annotations.Select;
import com.springboot.one.pojo.Item;


@Mapper
public interface ItemMapper {
	
	@Select ("SELECT * FROM OITM WHERE id=#{id}")
	Item getItem(int id);
	
	@Select ("SELECT * FROM OITM")
	@Results (id="id", value= {
			@Result(column="id", property="id", javaType=Integer.class, jdbc.Type=JdbcType.BIGINT),
			@Result(),
	})
	Item getAll();
}